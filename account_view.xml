<openerp>
    <data noupdate="0">

        <record id="view_invoice_cert_form" model="ir.ui.view">
            <field name="name">account.invoice.cert.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
	           <data>
			<field name="period_id" position="after">
	                        <group name="afip" string="AFIP" colspan="2">
        	                    <field name="certificate_nbr" placeholder="0001-000-000005" />
                        	</group>
			</field>
                    </data>
            </field>
        </record>

    </data>
</openerp>
